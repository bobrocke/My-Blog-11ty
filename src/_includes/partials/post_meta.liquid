<div class="text-xs md:text-sm mb-3 mt-1 dark:text-gray-300">
  <i class="fa-regular fa-calendar"></i>&nbsp;&nbsp;{{ post.date | postDate }}

  {% assign modifiedDate = post.data.lastmod %}
  {% if modifiedDate %}
    &nbsp;&nbsp;Updated: {{ modifiedDate | postDate }}
  {% endif %}

  {% for category in post.data.categories %}
    {% for array in postsByCategories %}
      {% if array.categoryName == category %}
        {% assign categoryURL = array.slug %}
        {% break %}
      {% endif %}
    {% endfor %}
    {% if forloop.first %}&nbsp;&nbsp;&nbsp;<i class="fa-regular fa-folder"></i>&nbsp;{% endif %}
    {% if page.url == categoryURL %}
      {{ category }}
    {% else %}
      <a class="hover:text-red-600 dark:hover:text-black" href="{{ categoryURL }}">{{ category }}</a>
    {% endif %}
    {% unless forloop.last %}, {% endunless -%}
  {% endfor %}


  {% for tag in post.data.tags %}
    {% if forloop.first %}&nbsp;&nbsp;&nbsp;<i class="fa-solid fa-hashtag"></i>{% endif %}
    {% if page.url contains tag %}
      {{ tag }}
    {% else %}
      <a class="hover:text-red-600 dark:hover:text-black" href="/tags/{{ tag }}">{{ tag }}</a>
    {% endif %}
    {% unless forloop.last %}, {% endunless -%}
  {% endfor %}
</div>
