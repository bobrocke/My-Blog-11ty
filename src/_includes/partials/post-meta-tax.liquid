<div class="blog-meta blog-taxonomies">
  {% for category in post.data.categories %}

    {% if forloop.first %}<i class="bi bi-folder"></i>&nbsp;{% endif %}

    {% assign parts = page.url | split: "/" %}
    {% assign end = parts | last %}
    {% assign thisCategory = category | slugify %}

    {% if end == thisCategory %}
      {{ category }}
    {% else %}
      <a href="/categories/{{ category | slugify }}">{{ category -}}</a>
    {% endif %}

    {% unless forloop.last %}, {% endunless -%}
  {% endfor %}

  {% for tag in post.data.tags %}

    {% if forloop.first %}&nbsp;&nbsp;&nbsp;<i class="bi bi-tag"></i>{% endif %}

    {% assign parts = page.url | split: "/" %}
    {% assign end = parts | last %}
    {% assign thisTag = tag | slugify %}

    {% if end == thisTag %}
      {{ tag }}
    {% else %}
      <a href="/tags/{{ tag | slugify }}">{{ tag }}</a>
    {% endif %}
    {% unless forloop.last %}, {% endunless -%}
  {% endfor %}
</div>
