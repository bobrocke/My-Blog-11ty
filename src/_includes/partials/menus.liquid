<nav>
  <div class="horiz-logo">
    <img src="/assets/images/logo-horiz.svg" alt="Logo" height="50" width="160" />
  </div>
  <div class="vert-logo">
    <img src="/assets/images/logo-vert.svg" alt="Logo" width="180"/>
  </div>

  <a href="javascript:void(0);" class="icon" onclick="togglelinks()">
    <i class="bi bi-list"></i>
  </a>

  <div class="nav-list" id="menu">
    <ul>
      {% for menu in site.menu %}
        {% if menu.url == page.url %}
          <li class="inactive">{{ menu.name }}</li>
        {% else %}
          <li>
            <a href="{{ menu.url }}">{{ menu.name }}</a>
          </li>
        {% endif %}
      {% endfor %}

      <li>
        <button id="theme-toggle" type="button">
          <span id="theme-toggle-dark-icon" class="hidden"><i class="bi bi-moon-fill"></i></span>
          <span id="theme-toggle-light-icon" class="hidden"><i class="bi bi-sun-fill"></i></span>
        </button>
      </li>
    </ul>
    <ul class="links">
      {% render "partials/links.liquid" %}
      <li class="copyright">
        <span>&copy; {{ 'now' | date: '%Y' }} <br> Bob Rockefeller. <br> All Rights Reserved.</span>
      </li>
    </ul>
  </div>
</nav>
