---
layout: layouts/base.liquid
pagination:
  data: collections.postsByTag
  size: 1
  alias: postsTags
permalink: /{{ postsTags.slug }}/
eleventyComputed:
    title: "{{ postsTags.tagName }}"
---

<div class="content">
  <h1 class="heading">Posts about {{ postsTags.tagName }}</h1>

    {% for post in postsTags.posts %}
      <div>
        {% render "partials/post-meta-dates.liquid", page: page, post: post %}

        <h2 class="blog-title"> <a href="{{ post.url }}">{{ post.data.title }}</a></h2>

        {% render "partials/post-meta-tax.liquid", page: page, post: post %}

        <div class="prose post-summary">
          {{ post.data.post_excerpt | markdown }}
        </div>
      </div>
    {% endfor %}
</div>
