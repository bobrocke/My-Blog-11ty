---
layout: layouts/base.liquid
pagination:
  data: collections.postsByCategories
  size: 1
  alias: postsCategories
permalink: /{{ postsCategories.slug }}/
eleventyComputed:
    title: "{{ postsCategories.categoryName }}"
---

<div class="content">
  <h1 class="heading">Posts about {{postsCategories.categoryName}}</h1>

  {% assign thisPage = page %}

  {% for post in postsCategories.posts %}
    <div>
      {% render "partials/post-meta-dates.liquid", page: thisPage, post: post %}
      <h2 class="blog-title"><a href="{{ post.url }}" >{{ post.data.title }}</a></h2>
      {% render "partials/post-meta-tax.liquid", page: thisPage, post: post %}

      <div class="prose post-summary">
        {{ post.data.post_excerpt | markdown }}
      </div>
    </div>
  {%- endfor -%}

   {% render "partials/pagination.liquid", pagination: postsCategories, page: thisPage %}

</div>
